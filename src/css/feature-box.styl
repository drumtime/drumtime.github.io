div.box
  border: 1px dashed rgba(0,0,0,0.3)
  border-radius(2px)
  box-shadow 1px 1px 1px rgba(255, 255, 255, 1),
             1px 1px 1px rgba(255, 255, 255, 1) inset
  background: linear-gradient(top,
    rgba(65, 136, 169, 0.03),
    rgba(65, 136, 169, 0.01) 99%
  )

  display: table-cell
  min-height: 80px
  margin: 24px 0
  min-height: 76px
  padding: 16px 12px
  text-align: left

  > div
    position: relative
    vertical-align: middle

  h3
    color: #666
    font-weight: bold
    font-size: 16px
    padding-left: 68px

  p
    font-size: 13px
    padding: 8px 0 0 68px
    line-height: 1.4

  .image
    position: absolute
    height: 50px
    width: 50px
    top: 5px
    left: 0

    &.device-support
      image: 'images/midi.png' 50px 50px

    &.metronome-sound
      image: 'images/sine-wave.png' 50px 50px

    &.configure
      image: 'images/knobs.png' 50px 50px

    &.latency
      image: 'images/stop-watch.png' 50px 50px

    &.progress
      image: 'images/progress.png' 50px 50px

    &.easy
      image: 'images/help.png' 50px 50px