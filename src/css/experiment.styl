#experiment
  min-height: 360px
  position: relative

  .image.experiment
    image: '../images/experiment.png' 400px 400px
    height: 400px
    width: 640px
    background-repeat: no-repeat
    background-position: 80% 50%

  .text
    max-width: 400px
    margin-left: 10px


  @media only screen and (max-width : 1205px)
    .text
      margin: 420px 0 0 0
      max-width: 560px

    .image.experiment
      background-position: 50% 50%
      position: absolute
      top: 0
      left: 50%
      margin-left: -320px