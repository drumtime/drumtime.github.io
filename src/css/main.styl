@import 'nib'
global-reset()

@import 'shared'
@import 'header'
@import 'footer'
@import 'video'
@import 'feature-box'
@import 'device-support'
@import 'experiment'
@import 'configurable'

html
  overflow-x: hidden
  min-width: 800px

body
  color: #525252
  height: 100%
  font: 13px  Helvetica Neue, Helvetica, Arial, Verdana, Droid Sans, Sans
  overflow-x: hidden
  width: 100%
  text-align: center

p.ie
  padding: 40px 0px 0 0
  font-size: 14px
  width: 600px
  line-height: 1.4
  margin: 0 auto
  text-align: justify

h1.ie
  text-transform: uppercase
  color: #999
  font-size: 16px
  font-weight: normal
  letter-spacing: 2px
  margin: 8px 0


a:link, a:visited
  color: #333

ul li
  margin: 6px 0 0 15px
  list-style: disc


#separator
  background: linear-gradient(left, rgb(49,125,169), rgb(190,76,115))
  height: 4px
  background-attachment:fixed

.main-content
  position: relative
  z-index: 1

  section
    @extend .centered-content
    margin: 40px auto
    font-size: 16px

    .image, .text
      display: inline-block
      vertical-align: middle
      line-height: 1

    .text
      vertical-align: top
      text-align: left

    h1
      font-size: 28px
      margin-bottom: 20px
      font-weight: 100
      letter-spacing: 1px
      font-family: HelveticaNeue-UltraLight, Helvetica Neue, Helvetica, Arial, Verdana, Droid Sans, Sans

    > p, .text p
      font-weight: 300
      line-height: 1.4
      margin-bottom: 6px

    ul
      font-weight: 300

#logo
  image: 'images/logo_small.png' 100px 21px
  background-repeat:  no-repeat
  display: inline-block
  height: 21px
  margin: 8px 24px 0 24px
  vertical-align: top
  width: 100px

  &.ie
    width: 200px
    height: 42px
    margin-top: 40px

#features
  font-size: 0
  margin-bottom: 100px
  border-spacing: 20px 30px

  > div
    display: table-row

    .box
      width: 50%

.play
  height: 64px
  width: 64px
  image: "images/play_video.png" 64px 64px
  cursor: pointer
  opacity: 0.9

  &:hover
    opacity: 1

  &:active
    opacity: 0.8

.dark
  //background: #fafafa
  background: linear-gradient(top,
    rgba(65, 136, 169, 0.01),
    rgba(65, 136, 169, 0.03) 99%
  )

  border-bottom: 1px solid #eee
  box-shadow: 0 1px 1px rgba(#fff, 1)

.dark-inverted
  background: linear-gradient(top,
    rgba(65, 136, 169, 0.03),
    rgba(65, 136, 169, 0.01) 99%
  )

  border-top: 1px solid #eee
  box-shadow: 0 -1px 1px rgba(#fff, 1)

#top-bar
  image: 'images/fur_texture.png' 200px 50px
  color: #ddd
  text-align: left
  box-sizing(border-box)
  color: #eee
  height: 298px
  position: relative
  margin-top: 104px
  margin-bottom: 100px

  .content
    @extend .centered-content
    height: 100%
    padding: 28px 20px
    box-sizing: border-box
    white-space: nowrap
    position: relative

  #summary
    width: 500px
    position: relative
    padding: 0 10px
    white-space: normal
    display: inline-block
    vertical-align: top

  h2
    border-bottom: 1px dashed #666
    font-size: 20px
    font-weight: 100
    padding-bottom: 8px
    padding-left: 30px
    margin-top: 15px
    width: 500px
    box-sizing: border-box
    text-align: left
    font-family: HelveticaNeue-UltraLight, Helvetica Neue, Helvetica, Arial, Verdana, Droid Sans, Sans  

  p
    border-left: 1px dashed #666
    display: inline-block
    font-weight: 200
    letter-spacing: 0.1em
    line-height: 20px
    padding: 12px 60px 0 20px
    text-shadow: -1px -1px 1px #333
    width: 200px

  p.requirements
    background: none
    border: none
    bottom: 16px
    color: #808080
    display: block
    font-size: 11px
    position: absolute
    text-align: center
    text-shadow: 1px 1px 1px #fff
    text-shadow: none
    top: 100%
    width: 400px
    left: 10px

  div#screenshot
    image: '../images/screen_full_app.png' 1014px 496px
    background-position: 50% 50%
    top: -86px
    height: 496px
    left: -100px
    position: relative
    width: 1014px
    display: inline-block
    vertical-align: top
    // @include animation(slidein 800ms linear)

  #play_video
    position: absolute
    left: 320px
    top: 140px

  #graphic
    image: 'images/drumkit_graphic.png' 113px 45px
    background-repeat: no-repeat
    background-position: 50% 50%
    display: inline-block
    height: 60px
    margin-top: 40px
    vertical-align: top
    width: 180px

  #watch
    border-radius(8px)
    box-shadow(0 1px 2px rgba(0,0,0,0.3), 0 1px 1px rgba(255,255,255,0.3) inset)
    cursor: pointer
    background: rgba(255,255,255,0.05)
    border: 1px solid #111
    font-size: 10px
    left: 50px
    padding: 2px 14px 2px 8px
    position: absolute
    top: 190px

    &:hover
      background: rgba(255,255,255,0.1)


    &:active
      box-shadow(0 1px 1px rgba(255,255,255,0.2), 0 1px 4px rgba(0,0,0,0.6) inset)
      background: rgba(0,0,0,0.05)

  #separator
    position: absolute
    bottom: 0
    width: 100%
    left: 0

#stretcher
  height: 100%
  min-height: 100%
  position: relative

  footer
    position: absolute
    width: 100%
    bottom:0

  #separator
    top: 0

